{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 20,
    "modules-left": [
        "custom/launch",
        "sway/workspaces",
        "custom/separator_r",
        "custom/media_previous",
        "custom/media_play",
        "custom/media_next",
        "custom/mpris"
    ],
    "modules-center": [
        "custom/separator_l",
        "sway/window",
        "custom/separator_r"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "disk",
        "custom/separator_l",
        "battery",
        "sway/language",
        "idle_inhibitor",
        "pulseaudio",
        "tray",
        "custom/updates",
        "clock",
        "custom/power_btn"
    ],

    "include": ["$XDG_CONFIG_HOME/waybar/modules.jsonc"] // Include the module config
}
